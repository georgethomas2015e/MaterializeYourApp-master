<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorgrey"
        android:weightSum="80">
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/Color_white"
            android:layout_weight="0.2"/>
        <TextView
            android:id="@+id/txt_timedays"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="10sp"
            android:textColor="@color/Color_white"
            android:layout_weight="9.8"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/Color_white"
            android:layout_weight="0.2"/>
        <TextView
            android:id="@+id/txt_calndtlkdays"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="10sp"
            android:textColor="@color/Color_white"
            android:layout_weight="9.8"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/Color_white"
            android:layout_weight="0.2"/>

        <TextView
            android:id="@+id/txt_clbutnttalkdays"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textColor="@color/Color_white"
            android:textSize="10sp"
            android:layout_weight="9.8"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/Color_white"
            android:layout_weight="0.2"/>

        <TextView
            android:id="@+id/txt_mailsentdays"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/Color_white"
            android:textSize="10sp"
            android:layout_weight="9.8"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/Color_white"
            android:layout_weight="0.2"/>
        <TextView
            android:id="@+id/txt_mailrecievedays"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/Color_white"
            android:textSize="10sp"
            android:layout_weight="9.8"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/Color_white"
            android:layout_weight="0.2"/>
        <TextView
            android:id="@+id/txt_messgedays"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="@color/Color_white"
            android:textSize="10sp"
            android:layout_weight="9.8"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/Color_white"
            android:layout_weight="0.2"/>
        <TextView
            android:id="@+id/txt_othersdays"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textSize="10sp"
            android:textColor="@color/Color_white"
            android:layout_weight="9.8"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/Color_white"
            android:layout_weight="0.2"/>
        <TextView
            android:id="@+id/txt_totaldays"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="100"
            android:textColor="@color/Color_white"
            android:layout_weight="9.8"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/Color_white"
            android:layout_weight="0.2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Color_white"/>

    </LinearLayout>


</LinearLayout>